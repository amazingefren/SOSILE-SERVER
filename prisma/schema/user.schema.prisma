model User {
  id        Int     @id   @default(autoincrement())
  username  String  @unique
  email     String  @unique
  likes     Likes[]
  role      Role    @default(USER)
  posts     Post[]
  profile   UserProfile?
}

model UserProfile {
  id          Int   @id @default(autoincrement())
  biography   String
  user        User  @relation(fields: [userId], references: [id])
  userId      Int
}

enum Role {
  USER
  ADMIN
}
