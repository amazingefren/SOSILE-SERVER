// https://ftpdocs.broadcom.com/cadocs/0/e002961e.pdf
model User {
  id        Int     @id   @default(autoincrement())
  username  String  @unique
  email     String  @unique
  password  String
  
  role      Role    @default(USER)


  // Sessions / RT
  sessions  RToken[]

  // User Relations
  posts     Post[]
  profile   UserProfile?

  following Follow[] @relation(name: "following")
  followers Follow[] @relation(name: "followers")

  // User -> Liked Posts
  // User -> Replied Posts
  likes     Post[]    @relation(name: "likedBy")
  
  replies      PostReply[] @relation("repliedBy")

  // Relation? WIP
  // replies   Post[]    @relation("repliedBy", fields: [replyId], references: [id])
  // replyId   Int
}

model Follow {
  id          Int   @id @default(autoincrement())
  user        User? @relation(name:"following", fields:[userId], references:[id])
  userId      Int?
  follower    User? @relation(name:"follower", fields:[followerId], references:[id])
  followerId  Int?
}

model UserProfile {
  id          Int   @id @default(autoincrement())
  biography   String
  user        User  @relation(fields: [userId], references: [id])
  userId      Int
}

enum Role {
  USER
  ADMIN
}
